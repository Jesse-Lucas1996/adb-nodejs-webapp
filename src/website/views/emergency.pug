html
  title Emergency
  style 
    include style.css
  body.atv-background
    include components/navbar.pug
    p.atv-title Emergency is #{isActive ? 'active' : 'not active'}      
    form.emergency__form(method='POST' action='/emergency')
      div.emergency__div
        label(for='stop') Stop
        input(type='radio' id='stop' name='set' value='stop')
        label(for='start') Start
        input(type='radio' id='start' name='set' value='start')
      button.atv-button(type='submit') Submit
    include components/footer.pug

